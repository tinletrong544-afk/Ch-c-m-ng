<body>
  <div id="startDialog" class="dialog">Click v√†o m√†n h√¨nh nhaaa!</div>

  <audio id="backgroundMusic" src="assets/music.mp3" loop></audio>

<script>
  // Ch·ªâ ch·ª©a duy nh·∫•t tin nh·∫Øn b·∫°n y√™u c·∫ßu
  const messages = ["T·∫∑ng B.thy 20/10 vui v·∫ª üåπ"];
  
  // Danh s√°ch m√†u cho ch·ªØ (t√πy ch·ªçn)
  const colors = ["white", "#FFDAB9", "#E0FFFF", "#FFC0CB", "#F08080"]; 
  
  const dialog = document.getElementById("startDialog");
  const audio = document.getElementById("backgroundMusic");

  function createPopup() {
    const popup = document.createElement("div");
    popup.className = "popup";
    // Ch·ªçn tin nh·∫Øn duy nh·∫•t
    popup.textContent = messages[0]; 
    // Ch·ªçn m√†u ng·∫´u nhi√™n
    popup.style.color = colors[Math.floor(Math.random() * colors.length)];

    const screenWidth = window.innerWidth;
    const screenHeight = window.innerHeight;

    const maxWidth = screenWidth - 150; 
    const maxHeight = screenHeight - 50;
    
    const x = Math.floor(Math.random() * (maxWidth < 0 ? 0 : maxWidth));
    const y = Math.floor(Math.random() * (maxHeight < 0 ? 0 : maxHeight));

    popup.style.left = `${x}px`;
    popup.style.top = `${y}px`;

    document.body.appendChild(popup);

    // Pop-up removes itself after 10 seconds (matches the fadeOut animation time)
    setTimeout(() => {
      popup.remove();
    }, 10000); 
  }

  function startPopups(count) {
    let created = 0;
    const interval = setInterval(() => {
      if (created >= count) {
        clearInterval(interval);
        return;
      }
      createPopup();
      created++;
    }, 30); // Creates a new pop-up every 30 milliseconds
  }

  function enterFullscreen() {
    const elem = document.documentElement;
    if (elem.requestFullscreen) {
      elem.requestFullscreen();
    } else if (elem.mozRequestFullScreen) {
      elem.mozRequestFullScreen();
    } else if (elem.webkitRequestFullscreen) {
      elem.webkitRequestFullscreen();
    } else if (elem.msRequestFullscreen) {
      elem.msRequestFullscreen();
    }
  }

  document.addEventListener("click", function startExperience() {
    dialog.style.display = "none";
    
    audio.play().catch(error => {
      console.warn("L·ªói ph√°t nh·∫°c, c√≥ th·ªÉ do tr√¨nh duy·ªát ch·∫∑n t·ª± ƒë·ªông ph√°t. H√£y t∆∞∆°ng t√°c l·∫°i.", error);
    });
    
    enterFullscreen();
    
    startPopups(200); 
    
    document.removeEventListener("click", startExperience);
  });
</script>
